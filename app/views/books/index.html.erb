<body>
  <h1 class="books">Books</h1>
  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.body %></td>
        <td><%= link_to 'Show', book_path(book.id),:style=>"color:#7f7f7f;" %></td>
        <td><%= link_to 'Edit', edit_book_path(book.id),:style=>"color:#7f7f7f;" %></td>
        <td><%= link_to 'Destroy', destroy_book_path(book.id),:style=>"color:#7f7f7f;", method: :delete, "data-confirm" => "Are you sure?" %></td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <h2>New book</h2>
    <%= form_with model:@book, url:"/books", local:true do |f| %>
    <%= render 'layouts/error_messages', model: f.object %>
    <div class="field">
      <label for="book_title">Title</label><br>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <label for="book_body">Body</label><br>
      <%= f.text_area :body %>
    </div>
    <div class="action">
    <%= f.submit 'Create Book'%>
    </div>
  <% end %>
</body>