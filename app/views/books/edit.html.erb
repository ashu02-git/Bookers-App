<h1>Editing Book</h1>
<div class="form">
<%= form_with model:@book, url:"/books/#{@book.id}", local:true do |f| %>
  <%= render 'layouts/error_messages', model: f.object %>

  <div class="field">
    <label for="book_title">Title</label><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <label for="book_body">Body</label><br>
    <%= f.text_area :body %>
  </div>
  <div class="action">
    <%= f.submit 'Update Book'%>
  </div>
<% end %>
</div>
<%= link_to 'Show', book_path, :style=>"color:#7f7f7f;" %>
<span>|</span>
<%= link_to 'Back', books_path, :style=>"color:#7f7f7f;" %>